<%= form_for(@thing, html: {class: "form-horizontal col-md-8"}) do |f| %>
  <div class="modal-footer">
    <%= link_to "Cancel", '#', class: "btn btn-sm btn-clear a-close-widget" %>
    <%= f.submit 'Create', class: "btn btn-primary btn-sm" %>
  </div>

  <div class="modal-body">
    <div class="row">
      <div class="col-lg-12">
        <%= render partial: 'form', locals: {containers: @containers, f: f} %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= link_to "Cancel", '#', class: "btn btn-sm btn-clear a-close-widget" %>
    <%= f.submit 'Create', class: "btn btn-primary btn-sm" %>
  </div>
<% end %>