<p id="notice"><%= notice %></p>

<h1>Listing Nouns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th>Description</th>
      <th>Aquired on</th>
      <th>Cost</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nouns.each do |noun| %>
      <tr>
        <td><%= noun.name %></td>
        <td><%= noun.parent_id %></td>
        <td><%= noun.description %></td>
        <td><%= noun.aquired_on %></td>
        <td><%= noun.cost %></td>
        <td><%= noun.value %></td>
        <td><%= link_to 'Show', noun %></td>
        <td><%= link_to 'Edit', edit_noun_path(noun) %></td>
        <td><%= link_to 'Destroy', noun, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

